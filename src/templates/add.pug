//- add.pug
extends layout.pug

block content

    div(class='row')
        div(class='col-3')
        div(class='col-6')
            h1= "New Contact"
            p= "Add new contact to phonebook."
            hr

            form(
                action='/add'
                method='post'
                class='mt-4'
            )
                div(class='form-group')
                    label Name
                    input(
                        name='contactName'
                        type='text'
                        class='form-control'
                        required
                    )
                div(class='form-group mt-2', id='numbersList')
                    label Phone number
                    input(
                        name='contactNumber'
                        type='number'
                        class='form-control'
                        placeholder='new number'
                        required
                    )
                div(class='form-group')
                    button(
                        class='btn btn-outline-primary btn-sm mt-4'
                        type='button'
                        id='btn-add-number'
                    ) + add number
                div(class='form-group mt-4 d-grid gap-2 col-6 mx-auto')
                    button(
                        type='submit'
                        class='btn btn-success btn-block'
                    ) save


    script(src='/js/add-contact.js')